pipeline {
    // agent
    // stages - only one
    // 
    agent none
    stages {
        // stage - one or more
        // 
        stage('Build') {
            // agent if the agent in pipeline is none
            // only one of the followings:
            //  --- steps
            //  --- stages
            //  --- parallel
            agent any
            steps {
                echo "step 1 in build"
                echo "step 2 in build"
            }
        }
        stage('Deploy') {
            agent any
            stages {
                stage('sub stage1 in deploy') {
                    steps {
                        echo "step 1 in deploy"
                    }
                }
                stage('sub stage2 in deploy') {
                    steps {
                        echo "step 2 in deploy"
                    }
                }
            }
        }
    }
}